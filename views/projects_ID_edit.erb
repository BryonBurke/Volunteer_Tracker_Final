<h1>Edit project info for project <%= @project.name %></h1>

<form action="/projects/<%= @project.id() %>" method="post">
    <input name="_method" type="hidden" value="patch">

    <label for="project_name">
        Project Name
        <input name="name" class="form-control" type="text" placeholder="<%= @project.name %>">
    </label>
    <label for="project_name">
        Project Year
        <input name="year" class="form-control" type="text" placeholder="<%= @project.year %>">
    </label>
    <label for="project_name">
        Project Genre
        <input name="genre" class="form-control" type="text" placeholder="<%= @project.genre %>">
    </label>
    <label for="project_name">
        Project Artist
        <input name="artist" class="form-control" type="text" placeholder="<%= @project.artist %>">
    </label>
    <button type="submit" class="btn">Go!</button>
</form>

<form action="/projects/<%= @project.id() %>" method="post">
  <input name="_method" type="hidden" value="delete">

  <button type="submit">Delete project</button>
</form>
