<h1>Edit album info for album <%= @album.name %></h1>

<form action="/albums/<%= @album.id() %>" method="post">
    <input name="_method" type="hidden" value="patch">

    <label for="album_name">
        Album Name
        <input name="name" class="form-control" type="text" placeholder="<%= @album.name %>">
    </label>
    <label for="album_name">
        Album Year
        <input name="year" class="form-control" type="text" placeholder="<%= @album.year %>">
    </label>
    <label for="album_name">
        Album Genre
        <input name="genre" class="form-control" type="text" placeholder="<%= @album.genre %>">
    </label>
    <label for="album_name">
        Album Artist
        <input name="artist" class="form-control" type="text" placeholder="<%= @album.artist %>">
    </label>
    <button type="submit" class="btn">Go!</button>
</form>

<form action="/albums/<%= @album.id() %>" method="post">
  <input name="_method" type="hidden" value="delete">

  <button type="submit">Delete album</button>
</form>
