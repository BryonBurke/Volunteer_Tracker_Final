<h1>All Sales Vinyl</h1>

<h3>Available Records</h3>

<% if @albums.any? %>
<table style="width:100%">
    <tr>
        <th>Album Name</th>
        <th>Artist</th>
        <th>BUY</th>
    </tr>
    <% @albums.each do |album| %>
    <tr>
        <td><a href="/albums/<%= album.id %>"><%= album.name %></a></td>
        <td><a href="/albums/<%= album.id %>"><%= album.artist %></a></td>
        <td>
            <form action="/albums" method="post">
                <input name="_method" type="hidden" value="patch">
                <input name="buyme" type="hidden" value="<%= album.id %>">
                <button type="submit">Buy Album</button>
            </form>
        </td>
    </tr>
    <% end %>
</table>
<% else %>
<p>There are currently no records to display.</p>
<% end %>

<a href="/albums/new">Add a new album</a>

<form action="/albums">
    <div class="form-group">
        <label for="search">Search</label>
        <input id="search" name="search" class="form-control" type="text">
    </div>
    <button type="submit" class="btn">Go!</button>
</form>

<h3>Albums Sold</h3>
<% if @sold.any? %>
<ul>
    <% @sold.each do |album| %>
    <li><a href="/albums/<%= album.id %>"><%= album.name %></a></li>
    <% end %>
</ul>
<% else %>
<p>There are currently no records to display.</p>
<% end %>
